<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/item_background"
    tools:context="yazdaniscodelab.retrofit_restapi_clickevent.DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:id="@+id/flower_photo"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Name:"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textColor="@android:color/white"
                    android:id="@+id/flowerName_xml"
                    android:textAppearance="?android:textAppearanceMedium"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Id:"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:id="@+id/flowerID_xml"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:textAppearanceMedium"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Category:"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textColor="@android:color/white"
                    android:id="@+id/flowerCategory_xml"
                    android:textAppearance="?android:textAppearanceMedium"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Price:"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textColor="@android:color/white"
                    android:id="@+id/flowerPrice_xml"
                    android:textAppearance="?android:textAppearanceMedium"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Instruction:"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:paddingBottom="50dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/flowerInstruction_xml"
                    android:textAppearance="?android:textAppearanceMedium"
                    />
            </LinearLayout>




        </LinearLayout>
    </ScrollView>

</LinearLayout>
